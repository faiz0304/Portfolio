{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ContactFormPayload",
    "description": "Shared contract for the contact form between frontend and backend.",
    "type": "object",
    "required": [
        "name",
        "email",
        "message"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "description": "Sender's full name"
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "Sender's email address"
        },
        "message": {
            "type": "string",
            "minLength": 1,
            "description": "Message body"
        }
    },
    "additionalProperties": false
}